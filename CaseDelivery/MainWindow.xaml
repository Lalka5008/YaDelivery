<Window x:Class="CaseDelivery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaseDelivery"
        mc:Ignorable="d"
        Title="Best Delivery" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть - визуализация маршрута -->
        <Border Grid.Column="0" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <Canvas x:Name="RouteCanvas" Background="#FFF0F0F0" ClipToBounds="True">
            </Canvas>
        </Border>

        <Grid Grid.Column="1" Margin="0,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Выберите набор данных:" Margin="5" FontWeight="Bold"/>
                <ComboBox x:Name="DatasetComboBox" Margin="5" SelectedIndex="0">
                    <ComboBoxItem Content="Набор 1 (3 заказа)"/>
                    <ComboBoxItem Content="Набор 2 (4 заказов)"/>
                    <ComboBoxItem Content="Набор 3 (4 заказа)"/>
                    <ComboBoxItem Content="Набор 4 (5 заказа)"/>
                    <ComboBoxItem Content="Набор 5 (4 заказов)"/>
                    <ComboBoxItem Content="Набор 6 (10 заказов)"/>
                </ComboBox>
                <Button x:Name="CalculateButton" Content="Построить маршрут" Margin="5" Padding="10,5" 
                        Click="CalculateRoute_Click" Background="#FF0078D7" Foreground="White"/>
            </StackPanel>

            <!-- Список точек маршрута -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
                <ListView x:Name="RouteListBox" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="2" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <TextBlock x:Name="RouteCostText" Text="Стоимость маршрута: -" FontWeight="Bold" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>